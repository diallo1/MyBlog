<ul class="nav nav-pills" style="background:{{ color|default('pink') }};padding:1em;">
    <li role="presentation"{{ app.request.get('_route') == 'homepage' ? ' class="active"' }}>
        <a href="{{ path('homepage') }}">Home</a>
    </li>
    <li role="presentation"{{ app.request.get('_route') == 'contact' ? ' class="active"' }}>
        <a href="{{ path('contact') }}">Contact</a>
    </li>
    <li role="presentation"{{ app.request.get('_route') == 'hello_world' ? ' class="active"' }}>
        <a href="{{ path('hello_world', {'name': 'estiam'}) }}">Hello Estiam</a>
    </li>
    {% if is_granted('ROLE_ADMIN') %}
        <li role="presentation"{{ app.request.get('_route') == 'contact_list' ? ' class="active"' }}>
            <a href="{{ path('contact_list') }}">Contacts</a>
        </li>
    {% endif %}
    {% if app.user %}
        <li role="presentation">
            <a href="{{ path('logout') }}">Logout</a>
        </li>
    {% else %}
        <li role="presentation"{{ app.request.get('_route') == 'login' ? ' class="active"' }}>
            <a href="{{ path('login') }}">Login</a>
        </li>
    {% endif %}
</ul>
