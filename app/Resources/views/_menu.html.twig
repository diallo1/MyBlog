<ul class="nav nav-pills" style="background:{{ color|default('pink') }};padding:1em;">
    <li role="presentation"{{ app.request.get('_route') == 'homepage' ? ' class="active"' }}>
        <a href="{{ path('homepage') }}">Accueil</a>
    </li>

    {% if is_granted('ROLE_ADMIN') %}
        <li role="presentation"{{ app.request.get('_route') == 'new_page' ? ' class="active"' }}>
             <a href="{{ path('new_page') }}">Nouvelle page</a>
         </li>
           <li role="presentation"{{ app.request.get('_route') == 'page_list' ? ' class="active"' }}>
            <a href="{{ path('page_list') }}">Blogs</a>
        </li>
    {% endif %}

    
    {% if app.user %}
        <li role="presentation" class="navbar-right">
            <a href="{{ path('logout') }}">Logout</a>
        </li>
    {% else %}
        <li role="presentation"{{ app.request.get('_route') == 'login' ? ' class="active"' }} class="navbar-right">
            <a href="{{ path('login') }}">Login</a>
        </li>
    {% endif %}
</ul>
