{% extends 'base.html.twig' %}

{% block title %}MyBlog{% endblock %}

{% block body %}
<h1>Blogs disponibles</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Contenu</th>
            <th>Published at</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for blog in blogs if blog.isProcessed %}
            <tr>
                <td>{{ blog.title }}</td>
                <td>{{ blog.contenu[:100] }}</td>
                <td>{{ blog.publishedAt|date('Y-m-d H:i:s') }}</td>
                <td><a href="{{ path('blog_detail', {'id': blog.id}) }}" class="btn btn-primary">View detail</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock body %}
